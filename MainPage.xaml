<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIUIJuly2023.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <HorizontalStackLayout x:Name="AddressBar" Background="Red">
            <Label Text="🏠"/>
            <Label Text="Kirkegata 15"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout Grid.Row="1" x:Name="CarouselSection" Background="Green"/>
        <HorizontalStackLayout Grid.Row="2" x:Name="FeaturedSection" Background="Blue"/>
        <HorizontalStackLayout Grid.Row="3" x:Name="AdSection" Background="Pink"/>
        <HorizontalStackLayout Grid.Row="4" x:Name="BottomNavBar" Background="Brown"/>
    </Grid>

</ContentPage>
